<h1>Log in / Register</h1>

<%= form_for(@user) do |form| %>
  <%= form.label(:username, 'Username') %>
  <%= form.text_field(:username, placeholder: 'Your Username') %>
  <%= form.label(:email, 'Email') %>
  <%= form.text_field(:email, placeholder: 'user@user.ch') %>
  <%= form.submit('Log in') %>
<% end %>